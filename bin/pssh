#!/bin/bash

PROXY_PORT=${SSHPROXY_PORT:-2242}
PROXY_HOST=${SSHPROXY_HOST:-localhost}
PROXY_USER=${SSHPROXY_USER}
if [[ -z "${PROXY_USER}" ]]; then
   if [[ -n "${USER}" ]]; then
      PROXY_USER=${USER}
   else
      PROXY_USER=admin
   fi
fi

[ -n "$verbose" ] && echo ssh -tp $PROXY_PORT $PROXY_USER@$PROXY_HOST -- "$@"
exec ssh -tp $PROXY_PORT $PROXY_USER@$PROXY_HOST -- "$@"
